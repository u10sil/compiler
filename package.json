    "release": "np",
    "clean": "rm -rf build node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/syspl/syspl.git"
  },
  "keywords": [
    "programming-language",
    "syspl"
  ],
  "author": "Simon Mika (simon@mika.se)",
