  "bugs": {
    "url": "https://github.com/syspl/syspl/issues"
  },
  "homepage": "https://github.com/syspl/syspl#readme",
  "devDependencies": {
    "@types/node": "^7.0.12",
    "np": "^2.13.1",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "@cogneco/mend": "^1.2.1"
  }
}
